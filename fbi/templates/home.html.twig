{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="flex flex-col items-center text-center px-4 pt-12">

        <h2 class="text-4xl font-bold text-yellow-400 mb-6">
            Bienvenue dans le monde de FBI
        </h2>

        <img src="/images/logo-fbi.png" alt="Logo FBI" class="mx-auto w-80 mb-6 rounded shadow-lg mt-2">

        <p class="text-lg text-yellow-200 mb-8 leading-relaxed">
            Fullavatar Byakoren Industries est votre référence<br>
            pour les livres enchantés, outils divins et ressources sacrées<br>
            sur notre serveur Minecraft.
        </p>
        <div class="flex justify-center space-x-6">
            <a href="{{ path('about') }}" class="inline-block bg-yellow-400 text-black font-bold px-6 py-3 rounded hover:bg-yellow-300 transition">
            Nous Découvrir
            </a>

            <a href="{{ path('shops') }}" class="inline-block bg-yellow-400 text-black font-bold px-6 py-3 rounded hover:bg-yellow-300 transition">
            Explorer nos Shops
            </a>
        </div>
    </div>
{% endblock %}
